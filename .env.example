# Notion API credentials
NOTION_API_KEY=your_notion_integration_token
NOTION_DATABASE_ID=your_database_id

# Google Sheets credentials (for budgets)
GOOGLE_SERVICE_ACCOUNT={"type":"service_account",...}
GOOGLE_SHEETS_ID=your_spreadsheet_id
GOOGLE_SHEETS_RANGE=Sheet1!A:C

# Date range for expense tracking
FIRST_EXPENSE_MONTH=2021-03

# Allowance categories (comma-separated)
# These categories will be tracked cumulatively across all months
# and excluded from monthly budget calculations
ALLOWANCE_CATEGORIES=Allowance - Jack,Allowance - Jill
